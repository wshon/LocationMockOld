<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.bp.mocklocationtoolkit.MainActivity" >


    <TextView android:text="gpslable" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvNowGPS"
        android:layout_marginTop="42dp"
        android:text="now gps"
        android:layout_below="@+id/tvLabel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mock location"
        android:id="@+id/btnMock"
        android:layout_above="@+id/btnGetGPS"
        android:layout_alignEnd="@+id/tvCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvLatitude"
        android:text="latitude"
        android:layout_above="@+id/btnGetGPS"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="96dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get location"
        android:id="@+id/btnGetGPS"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/etDivider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView"
        android:text="longitude"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etLongitude"
        android:text="121.6709200000"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/btnGetGPS" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etLatitude"
        android:text="31.2404440000"
        android:layout_alignBottom="@+id/tvLatitude"
        android:layout_toEndOf="@+id/btnGetGPS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop mock"
        android:id="@+id/btnStopMock"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnMock" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etDivider"
        android:text="2500"
        android:layout_below="@+id/etLatitude"
        android:layout_alignEnd="@+id/btnMock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView2"
        android:text="divider"
        android:layout_alignBottom="@+id/etDivider"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCount"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvLabel"
        android:layout_alignParentStart="true" />

</RelativeLayout>
